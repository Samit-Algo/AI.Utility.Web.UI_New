        // Function to format AI response in markdown format
        function formatAIResponse(aiText) {
            if (!aiText) return '';
            
            try {
                // Check if the text contains markdown syntax
                const hasMarkdown = /[#*`\[\]()]/.test(aiText);
                
                if (hasMarkdown) {
                    // Configure marked options for better rendering
                    marked.setOptions({
                        breaks: true,
                        gfm: true,
                        sanitize: false
                    });
                    
                    // Parse markdown to HTML
                    const htmlContent = marked.parse(aiText);
                    
                    // Add Bootstrap classes for better styling
                    const styledContent = htmlContent
                        .replace(/<h1>/g, '<h5 class="text-info fw-bold">')
                        .replace(/<h2>/g, '<h6 class="text-info fw-bold">')
                        .replace(/<h3>/g, '<h6 class="text-info fw-semibold">')
                        .replace(/<ul>/g, '<ul class="mb-0 ps-3">')
                        .replace(/<ol>/g, '<ol class="mb-0 ps-3">')
                        .replace(/<li>/g, '<li class="mb-1">')
                        .replace(/<p>/g, '<p class="mb-2">')
                        .replace(/<code>/g, '<code class="bg-light px-1 rounded">')
                        .replace(/<blockquote>/g, '<blockquote class="border-start border-info border-3 ps-3 bg-info bg-opacity-10">');
                    
                    return styledContent;
                } else {
                    // Fallback to original bullet point format for non-markdown text
                    const sentences = aiText.split(/[.!?]+/).filter(s => s.trim().length > 0);
                    
                    if (sentences.length <= 1) {
                        return `<p class="mb-0">${aiText}</p>`;
                    }
                    
                    let formatted = '<ul class="mb-0 ps-3">';
                    sentences.forEach(sentence => {
                        const trimmed = sentence.trim();
                        if (trimmed.length > 0) {
                            formatted += `<li class="mb-1">${trimmed}.</li>`;
                        }
                    });
                    formatted += '</ul>';
                    
                    return formatted;
                }
            } catch (error) {
                console.error('Error parsing markdown:', error);
                // Fallback to plain text if markdown parsing fails
                return `<p class="mb-0">${aiText}</p>`;
            }
            }

